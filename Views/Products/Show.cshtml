@model Product

@{ ViewBag.Title = Model.Title;
    ViewBag.Text = Model.Text; }

<div class="div-box">
    <h2>
        @Model.Title
    </h2>
</div>

<div class="div-box">
    @Html.Raw(Model.Subtitle)
</div>

<div class="div-box">
    <p>@Html.Raw(Model.Count) @Html.Raw(Model.UniteOfMeasure)</p>
</div>

<div class="div-box">
    @Html.Raw(Model.Weigth)
</div>

<div class="div-box">
    @Html.Raw(Model.Price)
</div>


<div class="div-box">
    @Html.Raw(Model.Text)
</div>

