<!DOCTYPE HTML>
<html>
<head>
    <title>OPP Storage</title>
    
    @await Html.PartialAsync("MetaTagPartial")
    @await Html.PartialAsync("CssPartial")
</head>
<body class="is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        @await Html.PartialAsync("HeaderPartial")

        <!-- Main -->
        <section class="wrapper style1">
            <div class="container">
                <div class="row gtr-200">
                    <div class="col-4 col-12-narrower">
                        <div id="sidebar">

                            <!-- Sidebar -->
                            @await Html.PartialAsync("SidebarPartial")

                        </div>
                    </div>

                    <div class="col-8  col-12-narrower imp-narrower">
                        <div id="content">

                            <!-- Content -->
                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        @await Html.PartialAsync("FooterPartial")

    </div>

    <!-- Scripts -->
    @await Html.PartialAsync("ScriptsPartial")

</body>
</html>