@model Shop

@{
    string strTitle = "Редактировать";
    ViewBag.Title = strTitle;
}

<script src="~/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div class="div-box">
        <form asp-area="Admin" asp-controller="Shops" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdd" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label><br />
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Subtitle"></label><br />
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="Phone"></label><br />
                <input asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label><br />
                <textarea id="TextEditArea" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var editor = CKEDITOR.replace('TextEditArea');
    });
</script>